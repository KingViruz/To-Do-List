<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.albertoapps.listtodo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_to_do_list"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_to_do_list_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ListToDo">
        <activity android:name=".Src.Main.MainActivity"/>
        <activity android:name=".Src.Auth.Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>