<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:background="@drawable/rounded_dialog"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/margin_sides">

    <LinearLayout
        android:id="@+id/ly_add_cat_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/txt_add_cat_sentences"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="Añadir frases de gatos aleatorias"
            />

        <ImageView
            android:id="@+id/img_add_sentence"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_add_task"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/txt_cat_sentences"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero de frases de gatos a añadir"
        style="@style/normalTextFont.bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/Theme.red"
            android:layout_marginEnd="8dp"
            android:hint="Descripcion de la tarea"/>

        <EditText
            android:id="@+id/et_num_cat_sentences"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_weight="1"
            android:theme="@style/Theme.red"
            android:layout_marginEnd="8dp"
            android:hint="Ej: 5"/>

        <ImageView
            android:id="@+id/send_text"
            android:layout_weight="2"
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_send"
            />

    </LinearLayout>


</LinearLayout>